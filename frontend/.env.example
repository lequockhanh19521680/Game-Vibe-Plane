# Stellar Drift Game Configuration
# Copy this file to .env and configure your settings

# Backend API Configuration
VITE_API_BASE_URL=https://your-api-gateway-url.execute-api.region.amazonaws.com/stage
VITE_WEBSOCKET_URL=wss://your-websocket-url.execute-api.region.amazonaws.com/stage

# Environment
VITE_ENVIRONMENT=production

# Debug Settings
VITE_DEBUG_MODE=false
VITE_SHOW_CONSOLE_LOGS=false

# Game Configuration
VITE_GAME_VERSION=1.0.0
VITE_MAX_PLAYERS_LEADERBOARD=10

# Security
VITE_API_TIMEOUT=10000
VITE_WEBSOCKET_RECONNECT_ATTEMPTS=3
VITE_WEBSOCKET_RECONNECT_DELAY=5000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_LEADERBOARD=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# Development Only (will be ignored in production)
VITE_DEV_API_BASE_URL=http://localhost:3000
VITE_DEV_WEBSOCKET_URL=ws://localhost:3001
VITE_DEV_MOCK_DATA=false